*
    margin 0
    padding 0

html
    body
        width 100vw
        height 100vh
        background black
        .hero 
            width 100%
            height 100%
            background black
            position fixed
            display flex
            align-items center
            justify-content space-between
            flex-direction column
            z-index 500
            .heroTitle
                text-align center
                font-family 'Orbitron', sans-serif
                color white
                user-select none
                h1 
                    font-size 5em
                h2 
                    font-size 2em
            h3 
                font-family 'Arial', sans-serif
                color white
                font-size 1.2em
                user-select none
                margin 0 auto
                text-align center
                white-space nowrap
                overflow hidden
                line-height 120%
                margin-bottom:1%
            .heroButton 
                background black
                font-family 'Orbitron', sans-serif
                font-size 3em
                line-height 0
                letter-spacing 0.025em
                padding 35px 10px 35px 10px
                cursor pointer
                border-width 1px
                border-style solid
                border-color white
                color white
                min-width 120px
                overflow hidden
                position absolute
                top 50%
                left 50%
                transform translate(-50%, -50%)
                &:after 
                        background #8725ba
                        transition left 0.8s cubic-bezier(0.86, 0, 0.07, 1) 0.2s
                        z-index 0
                    &:before 
                        background #24bca2
                        z-index 5
                        transition left 1s cubic-bezier(0.86, 0, 0.07, 1)
                    &:hover 
                        &:after 
                            left -32%
                            transition left 0.8s cubic-bezier(0.86, 0, 0.07, 1)
                        &:before 
                            left -32%
                            transition left 1s cubic-bezier(0.86, 0, 0.07, 1)
                    span 
                        display block
                        position relative
                        z-index 10
                        color white
            .heroButton:after,
            .heroButton:before 
                padding 150px 0 150px
                content ''
                position absolute
                top 0
                left calc(-100% - 120px)
                height calc(100% - 29px)
                width calc(100% + 30px)
                border-radius 2px
                transform skew(-20deg)
        .paused 
            width 100%
            height 100%
            background black
            position fixed
            display none
            align-items center
            justify-content center
            flex-direction column
            z-index 501
            h1 
                font-family 'Orbitron', sans-serif
                color white
                font-size 5em
                user-select none
                margin 0 auto
                text-align center
                white-space nowrap
                overflow hidden
                line-height 120%
        .canvas
            transition opacity 2.5s ease-in-out
            opacity 0
            position absolute
            top 0
            left 0
            width 100%
            height 100%
        canvas
            position absolute
            top 0
            left 0
            width 100%
            height 100%